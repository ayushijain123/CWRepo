<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - All Right Reserved</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
     
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="logo1">
            COMMONWEAL
        </div>
       <nav>
            <ul id="menu">
                <li><a href="@Url.Action("Index", "Home")" class="glyphicon glyphicon-home" title="Home"></a><li>
                    <li><a href="@Url.Action("login", "Login")" class="fa fa-sign-in" title="Sign In"></a><li>
                         <li><a href="@Url.Action("CreateNGO", "ngoRegistration")" class="fa fa-group" title="Sign up as NGO"></a><li>
                               <li><a href="@Url.Action("CreateUserPost", "userRegistration")" class="fa fa-user-plus" title="Sign up as User"></a><li>
                
              
               
                

            </ul>
        </nav>
    </header>

    <div id="body" class="container">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix" style="width:100%;">
            @RenderBody()
        </section>
    </div>
    <footer class=" navbar-fixed-bottom">

        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Commonweal</p>
            </div>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
