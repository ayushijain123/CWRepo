@model CommonWeal.NGOWeb.Models.Password

@{
    ViewBag.Title = "ConfirmPassword";
}

<h2>ConfirmPassword</h2>
@using (Html.BeginForm("UpdatePassword", "Password", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Password</legend>
         @Html.Hidden("FinalEmail", Session["FinalEmail"])
       @* @Html.ViewBag.code*@
        @Html.Hidden("OTP", Session["OTP"])
         @* @FinalOTP.ToString*@
        
        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.NewPassword, new { placeholder="Password" })
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder="Confirm Password" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
      
        <p>
            <input type="submit" value="Recover" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
