@model CommonWeal.NGOWeb.Models.User

@{
    ViewBag.Title = "Login";
}

@*@Html.Raw(TempData["Loginmsg"])*@
<body>
    <div id="main">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Login</h3>
            </div>
            <div class="panel-body">
                <div id="Login">
                    @*<form name="User" class="form-horizontal" action="/Login/login" method="post">*@
                    @using (Ajax.BeginForm("Login", "Login", new AjaxOptions { HttpMethod = "POST" }, new { @class = "form-horizontal" }))
                    {  
                        <br />
                        <br />
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="fn">Email:</label>
                            <div class="col-xs-4">
                                @Html.TextBoxFor(a => a.LoginEmailID, new { placeholder = "Email ID" })<br />
                                @Html.ValidationMessageFor(a => a.LoginEmailID)
                                @*  <input type="text" class="form-control" id="email/mobno" placeholder="Email/Mobile Number" name="login_Email">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="ln">Password:</label>
                            <div class="col-xs-4">
                                @Html.PasswordFor(a => a.LoginPassword, new { placeholder = "Password" })
                                @Html.ValidationMessageFor(a => a.LoginPassword)
                                @*@Html.EditorFor(a => a.LoginPassword)*@
                                <br />
                            </div>

                        </div>
                        <div class="form-group">
                            @if (TempData["Success"] != null)
                            {
                      
                                <p style="color: red"><strong></strong>@TempData["Success"].ToString()</p>
                            }
                        </div>
                        <br />  
                        <div class="form-group">

                            <center><button type="submit" class="btn btn-primary" onclick="">Login</button></center>
                            <br />

                        </div>
                        <a id="forgatpassword" href="/Password/ForgotPassword">Forgot Password</a><br />
                    }
                    @*  @Html.Raw(TempData["Loginmsg"])*@

                </div>
            </div>
        </div>
    </div>
</body>
