@model IEnumerable<CommonWeal.Data.NGOUser>

<div class="container">
    <div id="main" class="col-md-12">
        <div class="col-md-8 col-md-offset-2">
            <div class="login panel panel-default">
                <div class="panel-heading">
                    <h3>Reset Password</h3>
                </div>
                <div class="panel-body col-md-12">
                    <form class="form-horizontal" action="/Admin/changePassword" method="post">
                        <div class="form-group">
                            <label class="control-label col-md-4" for="email">Email:</label>
                            <div class="reset-textfield col-md-6">
                                <input type="text" class="form-control" name="NGOEmailID" placeholder="Enter Email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="password">Password:</label>
                            <div class="reset-textfield col-md-6">
                                <input type="password" class="form-control" name="NGOPassword" placeholder="Enter Password" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <center><button type="submit" class="update-btn btn btn-primary"><span>Update</span></button></center>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


