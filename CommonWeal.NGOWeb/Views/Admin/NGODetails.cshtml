                            <div class="col-md-2">
                                <a href="/admin/Accept/@Model.LoginID"><span id="accept" class="btn btn-primary">Accept</span></a>
                                </div>
                              <div class="col-md-2">
                                     @if (Model.IsDecline == true && Model.IsActive == false)
