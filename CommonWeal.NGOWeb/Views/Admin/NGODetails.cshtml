                                   <a href="/admin/Decline/@Model.LoginID"><span id="decline" class="btn btn-primary">Decline</span></a>    
                                   }  
                                        </div> 
                                    <div class="col-md-2">                                       
                                   <span id="SendMail" class="btn btn-primary">Request for more info</span>
                                        </div>
                                </div>
                            </div>
                            </div>
    </div>
                      
                        
                    </form>
                      
                </div>


                
            </div>

</div>