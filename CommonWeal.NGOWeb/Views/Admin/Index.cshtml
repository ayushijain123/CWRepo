@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Admin_Master.cshtml";
}
<style>
    table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color: #4CAF50;
    color: white;
}
</style>
<div class="col-md-10 pull-right">
    <div class="row">
        <div class="total-count col-md-12">
            <div class="total-request col-md-4">
                <div class="panel panel-default">
                    <div class="panel-top">
                       <a href="admin/requests"> <span class="glyphicon glyphicon-hand-up"></span>
                        Total Requests</a>
                    </div>
                    <div class="panel-text"><a href="#">30</a></div>
                </div>
            </div>

            <div class="active-users col-md-4">
                <div class="panel panel-default">
                    <div class="panel-top">
                        <a href="#"><span class="glyphicon glyphicon-user"></span>
                        Active Users</a>
                    </div>
                    <div class="panel-text"><a href="#">15</a></div>
                </div>
            </div>

            <div class="blocked-users col-md-4">
                <div class="panel panel-default">
                    <div class="panel-top">
                        <a href="#"><span class="glyphicon glyphicon-ban-circle"></span>
                        Blocked Users</a>
                    </div>
                    <div class="panel-text"><a href="#">5</a></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="chart">
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);

                function drawChart() {
                    var data = google.visualization.arrayToDataTable([
                      ['Months', 'Requests', 'Active Users'],
                      ['1', 10, 40],
                      ['2', 11, 46],
                      ['3', 66, 112],
                      ['4', 103, 540]
                    ]);

                    var options = {
                        title: 'Users Report',
                        hAxis: { title: 'Months', titleTextStyle: { color: '#333' } },
                        vAxis: { minValue: 0 }
                    };

                    var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
                    chart.draw(data, options);
                }
            </script>

            <div id="chart_div" style="width: 100%; height: 500px;"></div>
        </div>
    </div>

    <div class="row">
        <div class="page-footer">
            <h1>www.commonweal.com</h1>
        </div>
    </div>
</div>



