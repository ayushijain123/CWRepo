@model IEnumerable<CommonWeal.Data.SpamUser>
@{
    ViewBag.Title = "Spam_Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/DataPlugIn/jquery-1.11.2-jquery.min.js"></script>
<link href="~/Content/DataPlugIn/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/DataPlugIn/jquery.dataTables.min.js"></script>
 <script type="text/javascript">
       $(document).ready(function () {
           $('#myTable').DataTable();
       });
    </script> 
<h2>Spam Users</h2>
<div class="row">
    <div class="col-md-12 ">
        <div class="requests">
            <table id="myTable" class="tableAdmin col-md-12">
                <thead class="tableheader col-md-12">
                    <tr>
                        <th class="col-md-3">SPAM USER NAME</th>
                        <th class="col-md-3">COMMENT CONTENT</th>
                        <th class="col-md-3">REPORTED BY</th>
                        <th class="col-md-3">BLOCK</th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {                       
                    <tr class="admintable">
                        <td class="col-md-3 adminTableData">@Html.DisplayFor(modelItem => item.AbuseedUserName)</td>
                        <td class="col-md-3 adminTableData">@Html.DisplayFor(modelItem => item.CommentContent) </td>
                        <td class="col-md-3 adminTableData">@Html.DisplayFor(modelItem => item.ReportedBy) </td>
                     @* <td class="col-md-3 adminTableData"><a href="/admin/Warn/@item.LoginID" class="fa fa-exclamation-triangle fa-2x" aria-hidden="true" style="color: red"></a></td>*@
                  @*    <td class="col-md-3 adminTableData"><a href="/admin/Warn/@item.LoginID" class="fa fa-exclamation-triangle fa-2x" aria-hidden="true" style="color: red"></a></td>*@
                      <td class="col-md-3 adminTableData"><a href="/admin/BlockUsers/@item.LoginId" class="fa fa-ban fa-2x" aria-hidden="true" style="color:red;"></a></td>
                    </tr>   
                }
                <i><a href="/Admin/" style="font-size: 16px;">Back to Dashboard</a></i>
                 <h3> <strong>Spam Users </strong></h3>
            </table>
        </div>
    </div>
</div>