@model NGOUserPage.Models.userregistration

@{
    ViewBag.Title = "Index";
}

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @*    <script src="~/Bootstrap/js/bootstrap.js"></script>
    <script src="~/Bootstrap/js/bootstrap.min.js"></script>*@

    @* <script src="~/Scripts/FormValidation.js"></script>*@
</head>
<body>

    <div id="main">
        <div class="panel panel-default">
            <div class="panel-heading" style="">
                <center><h3>User Registration Form</h3></center>
            </div>

            <div class="panel-body">
                <div id="user">

                    <form name="UserRegistration" id="horizontal" class="form-horizontal" method="post" action="/userRegistration/Index1">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <br />
                        <br />

                        <div class="form-group ">
                            <label class="control-label col-xs-4" for="fn">First Name:*</label>
                            <div class="col-xs-6">
                          @*      @Html.LabelFor(a => a.firstName)*@
                                @Html.TextBoxFor(a => a.firstName)
                                @*<input type="text" class="form-control" id="fntext" name="firstName" placeholder="First Name">*@
                                @Html.ValidationMessageFor(a => a.firstName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="ln">Last Name:*</label>
                            <div class="col-xs-6">
                                 @Html.TextBoxFor(a => a.lastName)

                              @*  <input type="text" class="form-control" id="lntext" name="lastname" placeholder="Last Name">*@
                                @Html.ValidationMessageFor(a => a.lastName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="email">Email:*</label>
                            <div class="col-xs-6">
                                 @Html.TextBoxFor(a => a.login_Email)
                               @* <input type="email" class="form-control" id="email" name="login_Email" placeholder="Enter email">*@
                                @Html.ValidationMessageFor(a => a.login_Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="MobileNumber">Mobile Number:*</label>
                            <div class="col-xs-6">
                                 @Html.TextBoxFor(a => a.Login_mobileNumber)
                               @* <input type="tel" class="form-control" name="Login_mobileNumber" id="Mnumber" placeholder="Mobile Number">*@
                                @Html.ValidationMessageFor(a => a.Login_mobileNumber)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-xs-4" for="pwd">Password:*</label>
                            <div class="col-xs-6">
                                 @Html.TextBoxFor(a => a.login_password)
                                @*<input type="password" class="form-control" id="pwd" name="login_password" placeholder="Enter password">*@
                                @Html.ValidationMessageFor(a => a.login_password)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-4" for="rpwd">Confirm Password:*</label>
                            <div class="col-xs-6">
                                 @Html.TextBoxFor(a => a.confirmpassword)
                                @*<input type="password" class="form-control" id="rpwd" name="confirmpassword" placeholder="Re-enter Password" />*@
                                @Html.ValidationMessageFor(a => a.confirmpassword)
                            </div>
                        </div>
                      @*  <div class="form-inline">
                                <label class="control-label col-xs-4" for="gender">Gender:*</label>
                                <div class="col-xs-6">
                                    <input type="radio" class="form-control" name="gid" required />
                                    <label>Male</label>
                                    <input type="radio" class="form-control" name="gid" required /><label>Female</label>
                                </div>
                            </div>*@
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary" onclick="">Submit</button><br />
                            <br />
                        </div>
                    </form>

                </div>

            </div>

        </div>

    </div>




</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
