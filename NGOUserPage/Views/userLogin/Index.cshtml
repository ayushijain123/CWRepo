@model NGOUserPage.tbl_login
@{
    ViewBag.Title = "Index";
}
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*    <script src="~/Bootstrap/js/bootstrap.js"></script>
    <script src="~/Bootstrap/js/bootstrap.min.js"></script>*@



</head>
<body>


    <div id="main">
        <div class="panel panel-default">
            <div class="panel-heading">
                <center><h3>User Login</h3></center>
            </div>
            <div class="panel-body">
                <div id="Login">
                    <form name="UserLogin" class="form-horizontal" action="/userLogin/" method="post">
                          @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                        <br />
                        <br />

                        <div class="form-group">
                            <label class="control-label col-xs-3" for="fn">Email or Mobile No.:*</label>
                            <div class="col-xs-6">
                                @Html.TextBoxFor(a => a.login_Email)<br/>
                                @*  <input type="text" class="form-control" id="email/mobno" placeholder="Email/Mobile Number" name="login_Email">*@

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-xs-3" for="ln">Password:*</label>
                            <div class="col-xs-6">
                                @Html.EditorFor(a => a.login_password) <br />


                            </div>
                        </div>


                        <br />
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary" onclick="">Submit</button><br />
                            <br />
                              <p id="forgetpassword">@Html.ActionLink("Forgot Password", "Index", "Reset")</p>
                            <p id="creataccount">@Html.ActionLink("Create Account", "Index", "userRegistration")</p>


                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>



</body>
