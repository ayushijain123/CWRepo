@model CommonWeal.NGOWeb.Models.Password

@{
    ViewBag.Title = "All Rights Reserved";
}

 @Scripts.Render("~/Script/jsvalidate")

@using (Html.BeginForm("ConfirmPassword", "Password", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="col-md-12">
            <div class="col-md-8 col-md-offset-2">
                <div class="confirm-otp panel panel-default">
                    <div class="panel-heading">
                        <h3>Confirm OTP</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-4" for="fn">OTP:</label>
                                <div class="col-xs-8">
                                    @Html.Hidden("FinalEmail", Session["FinalEmail"])
                                    @* @Html.ViewBag.code *@
                                    @Html.Hidden("OTP", Session["OTP"])
                                    @Html.Editor("FinalOTP", new { placeholder = "Enter OTP" })
                                </div>
                            </div>
                            <div class="form-group">
                                <center><button type="submit" class="btn btn-primary" onclick="">Submit</button></center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
}

