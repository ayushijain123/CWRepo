@model  CommonWeal.NGOWeb.ViewModel.Post

@{
    <div style="background-color: lightgray;" id="postuserdetail">
        <div class="form-inline">
            <img src="~/Images/orderedList3.png" />
            <a href="#">@Model.userName</a>
            <a href="#">@Model.postCreateTime</a>
        </div>
    </div>
@*  Text for image*@
    <div >
        <div class="form-inline" style="height: 50px;">
            <p>@Model.postcontent</p>
        </div>
    </div>
@*  <div class="form-group">*@
    <div id="image/video">
        @if (Model.postImageUrl != null)
        {
                        
            <img src="@Model.postImageUrl" style="height: 500px; width: 800px;" />
                    
                    
        }
                



@* ///edited on 24/10/16*@

        <div style="background-color: lightgray">
            <div class="form-inline" style="height: 30px;">
                <a href="#">Like</a>
                <a href="#">Comment</a>
            </div>


        </div>
        <br />
        @*///Comment div action*@
        <div class="form-inline" style="background-color: lightgray">
            @foreach (var comment in Model.PostComments)
            {
         
                <div class="form-group">
                    <div class="form-inline" style="border-bottom: ridge; width: 600px;">
                        <img src="~/Images/orderedList3.png"></img>
                        <a href="#"><span style="font-size: 16px;"><b>@comment.Username </b></span></a>
                        <a href="#">@comment.CreatedDateTime</a><br />
                        <p style="margin-left: 55px;">
                            @comment.commentContent
                        </p>
                        <div class="form-inline" style="height: 30px; margin-left: 10px;">
                            <a href="#">Like</a>
                            <a href="#">Reply</a>
                        </div>
                    </div>
                </div>


            }

            <div id="@Model.postId">
                <br />
            </div>

            @*///user Comment section*@

            @if (User.Identity.IsAuthenticated)
            {
    
                <div class="form-inline">
                    <img src="~/Images/orderedList3.png"></img>

                    @Html.TextArea("TextComment", new { id = "txtComment-" + @Model.postId, @class = "form-control", @style = " width: 480px; height:35px;", placeholder = "Write Your comment" })
                    <input type="button" id="postimage-@Model.postId" name="button" class="btn1 btn-primary btnPost" value="post" />
                </div>
            }

        </div>
    </div>
    <br />
    <br />
}